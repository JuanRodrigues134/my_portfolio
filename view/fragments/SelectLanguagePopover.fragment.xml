<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <Popover
        id="idPopoverSelectLanguage"
        showHeader="false"
        placement="Bottom">
        <VBox>
            <Button
                id="btnPtLanguage"
                text="{i18n>portuguese}"
                press="onDownloadCv('PT')" />
            <Button
                text="btnEnlanguage"
                press="onDownloadCv('EN')" />
        </VBox>
    </Popover>
</c:FragmentDefinition>